@model IEnumerable<Lab2.Models.Patient>

<h2>Просмотр пациентов</h2>


<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Номер медицинской карточки</th>
            <th>Диагноз</th>
            <th>Статус</th>
            <th>Больница</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Surname</td>
                <td>@item.MedicalCardNumber</td>
                <td>@item.Diagnosis</td>
                <td>@item.Status</td>
                <td>@item.HospitalId</td>
                <td>
                    <form asp-action="Edit" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Редактировать</button>
                    </form> |
                    <form asp-action="Delete" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите это удалить?');">
                        >
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
